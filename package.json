{
  "name": "codemanufacture-website",
  "description": "Codemanufacture Website",
  "version": "0.1.0",
  "author": "Piotr Kwiecinski <piotr.kwiecinski@codemanufacure.com>",
  "private": true,
  "dependencies": {
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "@types/react-helmet": "^5.0.6",
    "babel-plugin-styled-components": "^1.5.1",
    "gatsby": "next",
    "gatsby-plugin-google-tagmanager": "next",
    "gatsby-plugin-react-helmet": "next",
    "gatsby-plugin-robots-txt": "^1.0.2",
    "gatsby-plugin-sitemap": "next",
    "gatsby-plugin-styled-components": "next",
    "gatsby-plugin-typescript": "next",
    "gatsby-source-filesystem": "next",
    "gatsby-transformer-remark": "next",
    "graphql-code-generator": "^0.9.1",
    "graphql-codegen-typescript-template": "^0.9.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-helmet": "^5.2.0",
    "styled-components": "^3.3.3",
    "ts-loader": "^3.0",
    "typescript": "^2.8.3"
  },
  "resolutions": {
    "gatsby": "2.0.0-beta.59"
  },
  "engines": {
    "node": "^8.4.0"
  },
  "homepage": "https://codemanufacture.com/",
  "keywords": [
    "gatsby"
  ],
  "license": "Apache-2.0",
  "main": "n/a",
  "scripts": {
    "build": "gatsby build",
    "ci-check": "yarn run:parallel lint:* nit:*",
    "develop": "gatsby develop -H 0.0.0.0",
    "format:markdown": "prettier --config .prettierrc --parser markdown --write '{./content/**/*.md,./README.md}'",
    "format:source": "prettier --config .prettierrc --parser typescript --write 'src/**/*.{ts,tsx}'",
    "graphql-types": "gql-gen --schema http://localhost:8000/___graphql --template typescript --out ./src/graphql-types.d.ts",
    "lint:css": "stylelint './src/**/*.{ts,tsx}'",
    "lint:source": "tslint './src/**/*.{ts,tsx}'",
    "nit:markdown": "prettier --config .prettierrc --parser markdown --list-different '{./content/**/*.md,./README.md}'",
    "nit:source": "prettier --config .prettierrc --parser typescript --list-different 'src/**/*.{ts,tsx}'",
    "plop": "plop",
    "run:parallel": "npm-run-all --parallel",
    "serve": "gatsby serve",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.3",
    "plop": "^2.0.0",
    "prettier": "1.12.1",
    "stylelint": "^9.3.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.1",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0"
  }
}
